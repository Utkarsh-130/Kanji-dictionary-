{
    "manifest_version": 3,
    "name": "Kanji Hover Dictionary",
    "version": "1.1",
    "description": "Shows Kanji meaning, readings, and usage on hover.",
    "permissions": ["storage", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "options.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["dictionaryn5.json", "dictionaryn4.json", "dictionaryn3.json"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  